 <div class="container_show_equipment">



   <div class="card-equipment sticky-top">
      <h3 class="title-show text-center h2 font-weight-bold"><%= @equipment.identifiant %></br><span class="h4 text-muted">(<%= @equipment.location %>)</span></h3>
      <p class="h5 ml-4 font-weight-bold">
         Statut : 
         <% if @equipment.status == "Actif" %>
            <span class="status-color-green"><%= @equipment.status %></span>
         <% else %>
            <span class="status-color-red"><%= @equipment.status %></span>
         <% end %>
      </p>
      <p class="h5 ml-4 font-weight-bold">Validité QP : <span class="equipement_item_show"><%= @equipment.validity_qualification.strftime("%d/%m/%Y") %></span></p>
      <p class="h5 ml-4 font-weight-bold">Date de mise en service : <span class="equipement_item_show"><%= @equipment.commissioning_date.strftime("%d/%m/%Y") %></span></p>
      <p class="h5 ml-4 font-weight-bold">Informations complémentaires : </br><span class="equipement_item_show"><%= @equipment.detail %></span>
      <p class="btn_add_maintenance"><%= link_to 'Déclarer une intervention', new_equipment_maintenance_path(@equipment), class:'btn btn-success text-light' %></p>
   </div>




   <div class="maintenances_show_equipment">
      <div class="d-flex justify-content-center">
         <% @status.each do |status| %>
         <div class="m-3 mb-5" role="button"><%= link_to "#{status}", equipment_path(status: status), class: "btn btn-primary" %></div>
         <% end %>
         <div class="m-3 mb-5" role="button"><%= link_to "Toutes", equipment_path(@equipment), class: "btn btn-primary" %></div>
      </div>


      <% @sort_maintenances.each do |sort_maintenance| %>    

         <div class="maintenance_card mb-5">
            <div class="maintenance_card_list">
               <p><% if sort_maintenance.status == "Planifié" %>
                     <p class="maintenance-status-blue font-weight-bold"><%= sort_maintenance.status %></p>
                  <% elsif sort_maintenance.status == "En cours" %>
                     <p class="maintenance-status-orange font-weight-bold"><%= sort_maintenance.status %></p>
                  <% else %>
                     <p class="maintenance-status-green font-weight-bold"><%= sort_maintenance.status %></p>
                  <% end %>
               </p>
               <p><% if sort_maintenance.start_time === sort_maintenance.end_time %>
                     <p class="equipment-show-color font-weight-bold"><%= sort_maintenance.start_time.strftime("%d/%m/%Y") %></p>
                  <% else %>
                     <p class="equipment-show-color font-weight-bold"><%= sort_maintenance.start_time.strftime("%d/%m/%Y") %> - <%= sort_maintenance.end_time.strftime("%d/%m/%Y") %></p>
                  <% end %></p>
               <p><%= "#{sort_maintenance.external_interlocutor.name} (#{sort_maintenance.external_interlocutor.company})" %></p>
               <p><%= sort_maintenance.user.visa %></p>
            </div>
            <div class="maintenance_card_description">
               <h3 class="text-center mb-4"><%= sort_maintenance.name %></h3>
               <p><%= sort_maintenance.description %></p>
               <p class="maintenance_edit"><%= link_to edit_maintenance_path(sort_maintenance) do %>
                     <i class="fas fa-user-edit"></i>
                  <% end %>
               </p>
            </div>
         </div>
      <% end %>
   </div>
 </div>
