<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto w-50 rounded p-4 border bg-transparen">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="title-edit-equipment font-weight-bold">Modifier un équipement</h3>
          <%= link_to equipment_path, class: "delete-equipment h3 mt-1", method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        
        <%= simple_form_for [ @equipment ] do |f| %>
          <%= f.input :name, label: 'Type' %>
          <%= f.input :identifiant %>
          <%= f.input :serial_number, label: 'Numéro de série' %>
          <%= f.input :location, local: 'Localisation' %>
          <%= f.input :detail, label: 'Informations complémentaires' %>
          <%= f.input :commissioning_date, as: :date, html5: true, label: 'Date de mise en service' %>
          <%= f.input :validity_qualification, as: :date, html5: true, label: 'Date de fin de validité QP' %>
          <%= f.input :status, label: 'Statut', :collection => ['Actif', 'Inactif'] %>
          <%= f.submit "Valider", class: "btn-edit-equipment btn btn-success" %>
          <%= link_to "Annuler", equipment_index_path, class: "btn-edit-equipment btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
