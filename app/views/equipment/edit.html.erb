<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto mt-5 w-50 rounded p-5 border bg-transparen">
        <h1 class="mb-10">Ajouter un Equipment</h1>
        <%= simple_form_for [ @equipment ] do |f| %>
          <%= f.input :name, label: 'Nom' %>
          <%= f.input :identifiant %>
          <%= f.input :serial_number %>
          <%= f.input :location %>
          <%= f.input :detail %>
          <%= f.input :commissioning_date %>
          <%= f.input :validity_qualification %>
          <%= f.input :status %>
          <%= f.submit "Valider", class: "btn btn-success" %>
          <%= link_to "Annuler", user_path(current_user), class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
