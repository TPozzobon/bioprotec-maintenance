<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto mt-5 w-50 rounded p-5 border bg-transparen">
        <h1 class="mb-10">Ajouter un Equipement</h1>
        <%= simple_form_for [ @equipment ] do |f| %>
          <%= f.input :name, label: 'Type' %>
          <%= f.input :identifiant %>
          <%= f.input :serial_number, label: 'Numéro de série' %>
          <%= f.input :location, label: 'Localisation' %>
          <%= f.input :detail, label: 'Détails' %>
          <%= f.input :commissioning_date, label: 'Date de mise en service' %>
          <%= f.input :validity_qualification, label: 'Date de fin de validité QP' %>
          <%= f.input :status, label: 'État' %>
          <%= f.submit "Valider", class: "btn btn-success" %>
          <%= link_to "Annuler", user_path(current_user), class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
