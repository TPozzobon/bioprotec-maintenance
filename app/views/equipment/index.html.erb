<div class="container-fluid">
  <div class="d-flex flex-column mb-3 align-items-center">
    <h2 class="title-equipment font-weight-bold mb-5 border-bottom">Équipements</h2>
    <div class="d-flex">
      <%= form_tag equipment_index_path, class:"form-inline", method: :get do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher un equipement",
            style: "width: 250px;"
        %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <table>
      <thead class="back-color">
        <tr>
          <th class="font-weight-bold p-3 text-center h6">Nom</th>
          <th class="font-weight-bold p-3 text-center h6">Identifant</th>
          <th class="font-weight-bold p-3 text-center h6">Localisation</th>
          <th class="font-weight-bold p-3 text-center h6">Détails</th>
          <th class="font-weight-bold p-3 px-5 text-center h6">Date QP</th>
          <th class="font-weight-bold p-3 text-center h6">Statut</th>
          <th class="p-1 text-center h1">
            <%= link_to new_equipment_path do %>
              <i class="fas fa-folder-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @equipment.each do |equipment| %>
          <tr class= "hover">
            <td class="p-3 text-center h5"><%= link_to "#{equipment.name}", equipment_path(equipment), class: "remove-deco-link" %></td>
            <td class="p-3 text-center h5"><%= equipment.identifiant %></td>
            <td class="p-3 text-center h5"><%= equipment.location %></td>
            <td class="p-3 text-center h5"><%= equipment.detail %></td>
            <td class="p-3 text-center h5"><%= equipment.validity_qualification.strftime("%d/%m/%Y") %></td>
            <td class="p-3 text-center h5"><%= equipment.status %></td>
            <td class="back-color p-4 text-center h5">
              <%= link_to edit_equipment_path(equipment) do %>
                <i class="fas fa-user-edit"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
