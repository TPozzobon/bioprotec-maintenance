<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto w-50 rounded p-4 border bg-transparent">
        <h3 class="title-new-user font-weight-bold mb-3">Inscription</h3>

        <!-- Formulaire d'inscription sur l'application -->
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :visa,
                        autofocus: true %>
            <%= f.input :email,
                        required: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password, label: 'Mot de passe',
                        required: true,
                        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: 'Confirmer le mot de passe',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :admin, as: :boolean, label: "Cocher si l'utilisateur est administrateur" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Valider", class: "mt-3 btn-new-user btn btn-success" %>
            <%= link_to "Annuler", users_path, class: "mt-3 btn-new-user btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

