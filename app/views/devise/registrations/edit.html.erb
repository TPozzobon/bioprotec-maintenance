<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto w-50 rounded p-4 border bg-transparent">
        <h3 class="title-edit-user font-weight-bold mb-3">Modifier votre profil</h3>

        <!-- Formulaire d'Ã©dition de profil utilisateur -->
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :visa, required: true, autofocus: true %>
            <%= f.input :email, required: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password, label: 'Changer le mot de passe actuel',
                        hint: "Laisser le champ vide si vous ne voulez pas modifier votre mot de passe",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: 'Confirmer votre nouveau mot de passe',
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password, label: 'Mot de passe',
                        hint: "Nous avons besoin de votre mot de passe actuel pour confirmer les changements",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :status, required: true, :collection => ['Actif', 'Inactif'], label: "Statut" %>
            <%= f.input :admin, as: :boolean, label: "Cocher si l'utilisateur est administrateur" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Valider", class: "mt-3 btn-edit-user btn btn-success" %>
            <%= link_to "Annuler", :back, class: "mt-3 btn-edit-user btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
