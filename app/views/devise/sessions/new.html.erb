<div class="container pt-5 w-25">
  <h2 class="title-login mb-3 font-weight-bold">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="btn-login mb-3 form-actions btn btn-success">
      <%= f.button :submit, "Valider" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
