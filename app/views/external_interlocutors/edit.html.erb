<div class="position-relative">
  <div class="container">
    <div class="row mt-10 rounded">
      <div class="col-6 m-auto w-50 rounded p-5 border bg-transparen">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="title-edit font-weight-bold mb-3">Modifier un prestataire</h3>
          <%= link_to external_interlocutor_path, class: "delete-external h3 mt-1", method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>

        <%= simple_form_for [ @external_interlocutor ] do |f| %>
          <%= f.input :name, label: 'Nom' %>
          <%= f.input :company, label: 'Société' %>
          <%= f.input :phone_number, label: 'Téléphone fixe' %>
          <%= f.input :mobile_number, label: 'Mobile' %>
          <%= f.input :email %>
          <%= f.submit "Valider", class: "mt-3 btn-edit btn btn-success" %>
          <%= link_to "Annuler", external_interlocutors_path, class: "mt-3 btn-edit btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>