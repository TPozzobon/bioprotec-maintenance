<div class="container">
  <div class="d-flex justify-content-between mb-5 align-items-center">
    <h2 class="title-external font-weight-bold">Prestataires maintenance</h2>
    <%= link_to "Ajouter un prestataire", new_external_interlocutor_path, class: "link-to-new btn btn-primary" %>
  </div>
  <div class="d-flex justify-content-center">
    <table>
      <thead>
        <tr>
          <th class="font-weight-bold p-3 text-center h6">Nom</th>
          <th class="font-weight-bold p-3 text-center h6">Société</th>
          <th class="font-weight-bold p-3 text-center h6">Téléphone</th>
          <th class="font-weight-bold p-3 text-center h6">Mobile</th>
          <th class="font-weight-bold p-3 text-center h6">Email</th>
        </tr>
      </thead>
      <tbody>
        <% @external_interlocutors.each do |external_interlocutor| %>
          <tr>
            <td class="p-4 text-center h6"><%= link_to "#{external_interlocutor.name}", external_interlocutor_path(external_interlocutor), class: "remove-deco-link" %></td>
            <td class="p-4 text-center h6"><%= external_interlocutor.company %></td>
            <td class="p-4 text-center h6"><%= external_interlocutor.phone_number %></td>
            <td class="p-4 text-center h6"><%= external_interlocutor.mobile_number %></td>
            <td class="p-4 text-center h6"><%= mail_to "#{external_interlocutor.email}", external_interlocutor.email, class: "remove-deco-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
