<div class="container">
  <h1 class="text-center mb-5">Prestataires maintenance</h1>
  <%= link_to "Ajouter un prestataires", new_external_interlocutor_path, class: "d-flex justify-content-center" %>
  <div class="d-flex justify-content-center">
    <table>
      <thead>
        <tr>
          <th class="p-3 text-center h3">Nom</th>
          <th class="p-3 text-center h3">Société</th>
          <th class="p-3 text-center h3">Téléphone</th>
          <th class="p-3 text-center h3">Mobile</th>
          <th class="p-3 text-center h3">Email</th>
        </tr>
      </thead>
      <tbody>
        <% @external_interlocutors.each do |external_interlocutor| %>
          <tr>
            <td class="p-3 h5"><%= link_to "#{external_interlocutor.name}", external_interlocutor_path(external_interlocutor) %></td>
            <td class="p-3 h5"><%= external_interlocutor.company %></td>
            <td class="p-3 h5"><%= external_interlocutor.phone_number %></td>
            <td class="p-3 h5"><%= external_interlocutor.mobile_number %></td>
            <td class="p-3 h5"><%= external_interlocutor.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
