<div class="calendar-container">
  <%= month_calendar(events: @maintenances, end_attribute: :end_time) do |date, maintenances| %>
    <%= date %>

    <% maintenances.each do |maintenance| %>
      <div class="meeting mb-1">
        <small><%= maintenance.time unless maintenance.multi_days? %></small>
        <p><%= maintenance.name %></p>
      </div>
    <% end %>
  <% end %>
</div>
