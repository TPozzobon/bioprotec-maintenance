  <div class="row mt-10 rounded">
    <div class="col-6 m-auto mt-5 w-50 rounded p-5 border bg-transparent">
      <h1 class="mb-10">DÃ©clarer une intervention</h1>
      <%= simple_form_for [ @equipment, @maintenance ] do |f| %>
