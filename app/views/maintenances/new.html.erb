<div class="container">
  <div class="row rounded">
    <div class="m-auto rounded p-4 border bg-transparent">
      <h1 class="title-new-maintenance mb-3 font-weight-bold">Déclarer une intervention</h1>

      <!-- Formulaire de création de maintenance -->
      <%= simple_form_for [ @equipment, @maintenance ] do |f| %>
        <%= f.input :name, label: 'Intitulé' %>
        <%= f.input :description, as: :text, :input_html => { 'rows' => 5, 'cols' => 10 } %>
        <%= f.input :start_time, as: :datetime, html5: true, label: 'Date de début' %>
        <%= f.input :end_time, as: :datetime, html5: true, label: 'Date de fin' %>
        <div class="d-flex flex-column w-100 my-4">
          <%= f.select :external_interlocutor_id, options_for_select(@filtered_externals), include_blank: "Prestataire" %>
        </div>
        <div class="d-flex flex-column w-100 mb-3">
          <%= f.select :user_id, options_for_select(@filtered_users), include_blank: "Bioprotec" %>
        </div>
        <%= f.input :status, label: 'Statut', :collection => ['Planifié', 'En cours' ,'Clôturé', 'A Planifié'] %>
        <%= f.submit "Valider", class: "btn-new-maintenance btn btn-success mt-3" %>
        <%= link_to "Annuler", equipment_path(@equipment), class: "btn-new-maintenance btn btn-danger mt-3" %>
      <% end %>
    </div>
  </div>
</div>
